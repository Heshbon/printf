#include "main.h"
#include <stdarg.h>
#include <stdio.h>
/**
 *custom_printf - function that handle specifier
 *@format: parameter to be checked
 *@...: second parameter
 *Return: void
 */
void custom_printf(const char* format, ...)
{
	int value;
	va_list args;
	va_start(args, format);

	while (*format)
	{
		if (*format == '%')
		{
			*format++;
			if (*format == 'd' || *format == 'i')
			{
				value = va_arg(args, int);
				printf("%d", value);
				

				
			}
			_putchar(*format);
		
		}
		*format++;
		
	
	}
	va_end(args);
}
